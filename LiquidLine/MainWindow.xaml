<Window
    x:Class="LiquidLine.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:LiquidLine.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LiquidLine"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <TabControl>
            <TabItem Header="LiquidLine">
                <StackPanel
                    VerticalAlignment="Center"
                    Background="#FF081526"
                    Orientation="Vertical">
                    <components:LiquidLine x:Name="liquidLine" IsAnimationEnabled="True">
                        <components:LiquidLine.BorderStyle>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="BorderBrush" Value="Gray" />
                                <Setter Property="BorderThickness" Value="0,3,0,0" />
                            </Style>
                        </components:LiquidLine.BorderStyle>
                        <components:LiquidLine.LineStyle>
                            <Style TargetType="{x:Type Line}">
                                <Setter Property="Stroke" Value="Gray" />
                                <Setter Property="StrokeDashArray" Value="2,3" />
                                <Setter Property="StrokeDashOffset" Value="3" />
                                <Setter Property="StrokeThickness" Value="12" />
                            </Style>
                        </components:LiquidLine.LineStyle>
                    </components:LiquidLine>

                    <Grid Margin="0,5" />

                    <components:LiquidLine x:Name="liquidLine2" />
                </StackPanel>

            </TabItem>

            <TabItem Header="LiquidLine2">
                <StackPanel VerticalAlignment="Center">
                    <components:LiquidLine2 />
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
