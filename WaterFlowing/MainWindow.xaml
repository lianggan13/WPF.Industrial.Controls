<Window
    x:Class="WaterFlowing.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:WaterFlowing.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WaterFlowing"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid Background="#FF081526">
        <Grid.Resources>
            <Style x:Key="Style.ArrowShape" TargetType="{x:Type components:ArrowShape}">
                <Setter Property="Width" Value="25" />
                <Setter Property="Height" Value="35" />
                <Setter Property="Fill" Value="#FF265069" />
                <Setter Property="SkewRatio" Value="0.8" />
            </Style>
        </Grid.Resources>

        <components:FlowItemsControl
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Count="7"
            FlowItemElementType="{x:Type components:ArrowShape}"
            IsAnimationEnabled="True"
            LightFlowDirection="RightToLeft">
            <components:FlowItemsControl.FlowItemStyle>
                <Style BasedOn="{StaticResource Style.ArrowShape}" TargetType="{x:Type components:ArrowShape}">
                    <Setter Property="Direction" Value="Left" />
                </Style>
            </components:FlowItemsControl.FlowItemStyle>
        </components:FlowItemsControl>
    </Grid>
</Window>
