<Window
    x:Class="ProgressLoading.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loadings="clr-namespace:ProgressLoading.Loadings"
    xmlns:local="clr-namespace:ProgressLoading"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:progresses="clr-namespace:ProgressLoading.Progresses"
    Title="MainWindow"
    Width="800"
    Height="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <TabControl>
        <TabItem Header="RotateLoading">
            <loadings:RotateLoading Radius="60" Run="True" />
        </TabItem>
        <TabItem Header="SunLoading">
            <loadings:SunLoading Background="Chocolate" />
        </TabItem>
        <TabItem Header="BumpLoading">
            <loadings:BumpLoading />
        </TabItem>

        <TabItem Header="CircularBar">
            <progresses:ProgressCircle
                CircleBarThickness="5"
                CircleThickness="10"
                Radius="75"
                Value="90" />
        </TabItem>

    </TabControl>

</Window>
