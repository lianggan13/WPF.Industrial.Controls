<RangeBase
    x:Class="ProgressLoading.Progresses.ProgressCircle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProgressLoading.Progresses"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="150"
    d:DesignWidth="150"
    mc:Ignorable="d">
    <RangeBase.Resources>
        <Style TargetType="{x:Type local:ProgressCircle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type local:ProgressCircle}">
                        <Grid
                            Width="{Binding ActualWidth, Mode=OneWay, ElementName=PART_Ellipse}"
                            Height="{Binding ActualHeight, Mode=OneWay, ElementName=PART_Ellipse}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            d:Background="Red">
                            <Ellipse
                                x:Name="PART_Ellipse"
                                Stroke="Gray"
                                StrokeThickness="{TemplateBinding CircleThickness}">
                                <Ellipse.Effect>
                                    <DropShadowEffect
                                        BlurRadius="5"
                                        Direction="0"
                                        ShadowDepth="0"
                                        Color="White" />
                                </Ellipse.Effect>
                            </Ellipse>

                            <Path
                                x:Name="PART_Progress"
                                StrokeEndLineCap="Round"
                                StrokeStartLineCap="Round"
                                StrokeThickness="{TemplateBinding CircleBarThickness}">
                                <Path.Stroke>
                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Offset="0" Color="#FF87EEDD" />
                                        <GradientStop Offset="1" Color="#FF6977F2" />
                                    </LinearGradientBrush>
                                </Path.Stroke>
                            </Path>

                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="Black">
                                <Run FontSize="20" Text="{Binding Value, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:ProgressCircle}}, StringFormat='{}{0}'}" />
                                <Run Text="%" />
                            </TextBlock>


