<Window
    x:Class="BombDropper.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="BombDropper"
    Width="600"
    Height="500">

    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="280" />
        </Grid.ColumnDefinitions>


        <Border
            Margin="5"
            BorderBrush="SteelBlue"
            BorderThickness="1">
            <Grid>
                <Canvas
                    x:Name="canvasBackground"
                    MinWidth="50"
                    SizeChanged="canvasBackground_SizeChanged">
                    <Canvas.Background>
                        <RadialGradientBrush>
                            <GradientStop Offset="0" Color="AliceBlue" />
                            <GradientStop Offset="0.7" Color="White" />
                        </RadialGradientBrush>
                    </Canvas.Background>
                </Canvas>
            </Grid>
        </Border>

        <Border
            Grid.Column="1"
            Margin="5"
            BorderBrush="SteelBlue"
            BorderThickness="1">
            <Border.Background>
                <RadialGradientBrush Center="1,0.7" GradientOrigin="1,0.7" RadiusX="1" RadiusY="1">
                    <GradientStop Offset="0" Color="Orange" />
                    <GradientStop Offset="1" Color="White" />
                </RadialGradientBrush>
            </Border.Background>
            <StackPanel
                Margin="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock
                    FontFamily="Impact"
                    FontSize="35"
                    Foreground="LightSteelBlue">
                    Bomb Dropper
                </TextBlock>
                <TextBlock
                    x:Name="lblRate"
                    Margin="0,30,0,0"
                    FontFamily="Georgia"
                    FontSize="14"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="lblSpeed"
                    Margin="0,30"
                    FontFamily="Georgia"
                    FontSize="14"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="lblStatus"
                    FontFamily="Georgia"
                    FontSize="20"
                    TextWrapping="Wrap">
                    No bombs have dropped.
                </TextBlock>
                <Button
                    x:Name="cmdStart"
                    Width="80"
                    Margin="0,30"
                    Padding="5"
                    Click="cmdStart_Click"
                    Content="Start Game" />
            </StackPanel>

        </Border>
    </Grid>


</Window>
